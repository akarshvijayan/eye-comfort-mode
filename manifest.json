{
  "manifest_version": 3,
  "name": "PDF Dark Mode",
  "description": "Click to toggle dark mode for PDF",
  "version": "1.0.0",
  "action": {
    "default_icon": "icons/icon128.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab", "scripting"
  ],
  "background": {
    "service_worker": "background.min.js"
  }
}
