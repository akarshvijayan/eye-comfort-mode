{
  "manifest_version": 3,
  "name": "Toggle Dark Mode",
  "description": "One click solution to toggle between dark and light modes for reading various web content, extending beyond just texts and PDFs.",
  "version": "1.0.1",
  "action": {
    "default_icon": "icons/icon128.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab", "scripting"
  ],
  "host_permissions": [
    "file:///*"
  ],
  "background": {
    "service_worker": "background.min.js"
  }
}
